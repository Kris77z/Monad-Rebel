{
  "name": "monad-rebel",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "agents/*",
    "shared",
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev:agents",
    "dev:agents": "concurrently \"npm run dev:registry\" \"npm run dev:writer\" \"npm run dev:hunter\"",
    "dev:all": "concurrently \"npm run dev:registry\" \"npm run dev:writer\" \"npm run dev:hunter\" \"npm run dev:frontend\"",
    "dev:registry": "npm run dev --workspace @rebel/registry",
    "dev:writer": "npm run dev --workspace @rebel/writer",
    "dev:hunter": "npm run dev --workspace @rebel/hunter",
    "dev:frontend": "npm run dev --workspace @rebel/frontend",
    "demo": "tsx scripts/demo.ts",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "concurrently": "^9.1.2",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  }
}
